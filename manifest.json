{
    "manifest_version": 3,
    "name": "Zalo Cloud upload extension",
    "version": "1.0.0",
    "description": "Đánh chặn file kéo thả trên Zalo Web và upload thẳng lên Google Drive/OneDrive.",
    "icons": {
        "16": "assets/icon-16.png",
        "128": "assets/icon-128.png"
    },
    "permissions": [
        "storage",
        "identity"
    ],
    "host_permissions": [
        "https://www.googleapis.com/*",
        "https://graph.microsoft.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://chat.zalo.me/*"
            ],
            "js": [
                "src/content/content_script.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "src/background/service_worker.js"
    }
}